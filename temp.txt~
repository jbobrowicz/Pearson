case function
  when "identity"
    $stdout.write $stdin.read
  when "mean" # should I implement it here ? If yes, when ? 
    i = $stdin.read.split(/\D/)
    x = 0
    i.each do |a|
      x += a.to_i
    end
    $stdout.write x/i.size	
  when "mode"     # mode algorithm
  $stdout.write 3 # d = x0 + ((n0 - n_1) / ((n0 - n_1) + (n0 - n1))) * c0 
  when "median"
  $stdout.write 3
  when "sd"
  $stdout.write 2
  when "dispersion"
  $stdout.write 3
  when "min"
  $stdout.write 1
  when "max"
  $stdout.write 5
  when "range"
  $stdout.write 5
  when "cov"
  $stdout.write 5
  when "perc0"
  $stdout.write 1
  when "perc1"
  $stdout.write 2
  when "perc2"
  $stdout.write 3
  when "perc3"
  $stdout.write 4
  when "perc4"
  $stdout.write 5
  when "ir"
  $stdout.write 3
  when "variance"
  $stdout.write 1
  when "skewness"
  $stdout.write 0
  when "kurtosis"
  $stdout.write 0
  when "moments"
  $stdout.write 0
  when "lmoments"
  $stdout.write 0
  else
    puts "Error: Unsupported function #{function}"
end
